<!DOCTYPE html>
<html lang="en">
	
<%- include('./partials/head.ejs') %>
<body class="host_version"> 
	<div id="preloader">
		<div class="loader-container">
			<div class="progress-br float shadow">
				<div class="progress__item"></div>
			</div>
		</div>
	</div>
    <!-- LOADER -->
	<%- include('./partials/navbar.ejs')  %>

	<!-- End header -->
	
	<div class="all-title-box">
		<div class="container text-center">
			<h1>Courses<span class="m_1">Lorem Ipsum dolroin gravida nibh vel velit.</span></h1>
		</div>
	</div>
	
    <div id="overviews" class="section wb">
        <div class="container">
            <div class="row"> 
                <div class="col-lg-9 blog-post-single">
				            <div class="row"> 

								<%  datas.forEach(data=>{ %>


								
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="course-item mb-5">
						<div class="image-blog">
							<img src="images/blog_1.jpg" alt="" class="img-fluid">
						</div>
						<div class="course-br">
							<div class="course-title">
								<h2><a href="courses/<%= data.slug %>" title=""><%=  data.title%></a></h2>
								<h4><%= data.cateogry %></h4>
							</div>
							<div class="course-desc">
								<h4><%= data.cateogry %></h4>
								<p><%= data.description %> </p>
							</div>
						</div>
						<div class="course-meta-bot">
							<ul>
								<li><i class="fa fa-user" aria-hidden="true"></i> <%= data.author.name  %></li>

								<h4><%= data.category.name %></h4>
							</ul>
						</div>
					</div>
                </div>
				<% }) %>
				<!-- end col -->

                <!-- end col -->	
            </div><!-- end row -->
					
                </div><!-- end col -->
				<div class="col-lg-3 col-12 right-single">
					<div class="widget-search">
						<div class="site-search-area">
							<form method="get" id="site-searchform" action="#">
								<div>
									<input class="input-text form-control" name="search-k" id="search-k" placeholder="Search keywords..." type="text">
									<input id="searchsubmit" value="Search" type="submit">
								</div>
							</form>
						</div>
					</div>
					<div class="widget-categories">
						<h3 class="widget-title">Categories</h3>
						<ul>
							<% categories.forEach(category=>{ %>

								<li><a href="/courses?category=<%= category.slug %>" ><%=  category.name %></a></li>

							<% }) %>
				
						</ul>
					</div>
				</div>
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end section -->
	<%- include('./partials/footer.ejs') %>

</body>
</html>