<!DOCTYPE html>
<html lang="en">
	
	<%- include('./partials/head.ejs') %>

<body class="host_version"> 
	<div id="preloader">
		<div class="loader-container">
			<div class="progress-br float shadow">
				<div class="progress__item"></div>
			</div>
		</div>
	</div>
    <!-- LOADER -->
	<%- include('./partials/navbar.ejs')  %>

	<!-- End header -->
	
	<div class="all-title-box">
		<div class="container text-center">
			<h1>DashBoard For<span class="m_1"><%= user.name %></span></h1>
			
		</div>
	</div>
	
    <div id="overviews" class="section wb">
        <div class="container">
            <div class="row"> 
                <div class="col-lg-12 blog-post-single">
					<h2><a href="/dashboard/users">All Users</a></h2>		
					<button class="btn btn-danger" data-toggle="modal" data-target="#addCourseModel">Add Course</button>			
					<div class="blog-author">
						<div class="author-bio">
							<h3 class="author_name"><a href="#"><%= user.name %></a></h3>
							<h5><%= user.userRole.name %> at <a href="#">SmartEDU</a></h5>
							<p class="author_det">
								Lorem ipsum dolor sit amet, consectetur adip, sed do eiusmod tempor incididunt  ut aut reiciendise voluptat maiores alias consequaturs aut perferendis doloribus omnis saperet docendi nec, eos ea alii molestiae aliquand.
							</p>
						</div>
						<div class="author-desc">
							<img src="images/author.jpg" alt="about author">
						</div>
					</div>
					
                </div><!-- end col -->
            </div><!-- end row -->
			<div class="row mt-5"> 
                
				<% courses.forEach(course=>{ %>
					<div class="col-lg-6 col-md-6 col-12">
						<div class="course-item mb-5">
							<div class="image-blog">
								<img src="images/blog_2.jpg" alt="" class="img-fluid">
							</div>
							<div class="course-br">
								<div class="course-title">
									<h2><a href="/courses/<%= course.slug %>" title=""><%= course.title %></a></h2>
								</div>
								<div class="blog-desc">
									<p><%= course.description %> </p>
								</div>
							</div>
						</div>
					</div>
				<% }) %>
				  <!-- end col -->	
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end section -->
	<div class="modal fade" id="addCourseModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered" role="document">
		  <div class="modal-content">
			<div class="modal-header">
			  <h5 class="modal-title" id="exampleModalLongTitle">Add Course</h5>
			  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			  </button>
			</div>
			<div class="modal-body">
				<form class="" name="contactform" method="post" action="/courses">
					<div class="row row-fluid">
						<div class="offset-1 col-lg-10 col-md-10 col-sm-10">
							<input type="text" name="title" id="title" class="form-control" placeholder="Course Title">
						</div>
						<div class="offset-1 col-lg-10 col-md-10 col-sm-10">
							<input type="text" name="description" id="desctription" class="form-control" placeholder="Course description">
						</div>
				   
						<div class="offset-1 col-lg-10 col-md-10 col-sm-10">
							<textarea name="description2" id="" placeholder="second description"></textarea>
						</div>
						<div class="offset-1 col-lg-10 col-md-10 col-sm-10">
							<select name="category" id="">
								<% categories.forEach(category =>{ %>

									<option value="<%= category.name %>" ><%= category.name %></option>

								<% }) %>	
							</select>
						</div>
						<div class="offset-1 col-lg-10 col-md-10 col-sm-10">
							<button type="submit"  id="submit" class="btn btn-light btn-radius btn-brd grd1 btn-block">Create </button>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
			  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			 
			</div>
		  </div>
		</div>
	  </div>
	<%- include('./partials/footer.ejs') %>


</body>
</html>